generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id                  Int      @id @default(autoincrement())
    username            String   @unique
    password            String?
    aboutMe             String?
    profile_picture_url String?
    createdAt           DateTime @default(now())
    updatedAt           DateTime @updatedAt
    // Google Authentication
    googleId            String?  @unique
    email               String?  @unique

    posts           Post[]
    comments        Comment[]
    sentFollows     Follow[]  @relation("Initiator")
    receivedFollows Follow[]  @relation("Recipient")
}

enum FollowStatus {
    PENDING
    ACCEPTED
    REFUSED
    BLOCKED
}

model Follow {
    id         String       @id @default(uuid())
    status     FollowStatus @default(PENDING)
    createdAt  DateTime     @default(now())
    acceptedAt DateTime?

    senderId Int
    sender   User @relation("Initiator", fields: [senderId], references: [id], onDelete: Cascade)

    recipientId Int
    recipient   User @relation("Recipient", fields: [recipientId], references: [id], onDelete: Cascade)

    @@unique([senderId, recipientId])
    @@index([senderId, recipientId, status])
}

model Post {
    id        String   @id @default(uuid())
    text      String
    likes     Int      @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    comments Comment[]

    user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId Int

    @@index([userId, createdAt])
}

model Comment {
    id        String   @id @default(uuid())
    text      String
    likes     Int      @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId Int
    post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId String

    @@index([postId, userId])
}
